(defun julia/project-try (dir)
  (message "directory:%s" dir)
  (cons 'julia "/home/julien/projects/sandbox/embedded/compteur/")
  )


(cl-defmethod project-roots ((project (head julia)))
  (message "project:%s" project)
  (message "ret:%s" (list (cdr project)))
  (list (cdr project))
  (list "/home/julien/projects/sandbox/embedded/compteur/" "/home/julien/projects/sandbox/embedded/common/")
  )


(defun jbo-fix-project-roots ()
  (setq project-find-functions nil)
  (add-hook 'project-find-functions 'julia/project-try)
  )

(jbo-fix-project-roots)
